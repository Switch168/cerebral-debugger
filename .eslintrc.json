{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "rules": {
    "standard/computed-property-even-spacing": "off"
  }
}
